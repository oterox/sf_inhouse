{% extends 'PixellaryInhouseBundle::layout.html.twig' %}

{% block container %}


    <div class="row">

        <div class="span12">
            <h2>Task List</h2>
        
        </div>
        <div class="span12">

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Task #</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Assignee</th>
                    <th>Created</th>
                </tr>
                </thead>
                <tbody>

                {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.status }}</td>
                    <td>{{ task.assignee }}</td>
                    <td>{{ task.created |date('d-m-Y') }}</td>

                </tr>
                {% endfor %}


                </tbody>
            </table>

